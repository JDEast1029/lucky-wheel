{
	"compilerOptions": {
		"lib": ["es2020", "dom"],
		"module": "system",
        "esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
        "skipLibCheck": true ,
		"outDir": "./lib",
		"sourceMap": true,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}